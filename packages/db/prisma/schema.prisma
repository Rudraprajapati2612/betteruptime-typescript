generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model Website{
  id          String                @id @default(uuid())
  url         String
  timeAdded   DateTime
  tickes      WebsiteTick[]
}

model Region {
  id          String              @id @default(uuid())
  name        String
  tickes      WebsiteTick[]
}

model WebsiteTick{
  id               String              @id   @default(uuid())
  respone_time     String
  status           WebsiteStatus
  region           Region           @relation(fields: [region_id] , references: [id])
  website          Website           @relation(fields: [website_id],references: [id]) 
  region_id         String      
  website_id        String
}

enum WebsiteStatus {
  Up 
  Down 
  Unknown
}