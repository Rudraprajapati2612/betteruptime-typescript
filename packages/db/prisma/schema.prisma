generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User{
id              String              @id @default(uuid())
username        String              @unique
password        String
website         Website[]
}
model Website{
  id          String                 @id @default(uuid())
  url         String
  timeAdded   DateTime
  userId      String
  user        User                  @relation(fields : [userId],references : [id])
  tickes      WebsiteTick[]
  
}

model Region {
  id          String                @id @default(uuid())
  name        String
  tickes      WebsiteTick[]
}

model WebsiteTick{
  id               String              @id   @default(uuid())
  response_time     Int
  status           WebsiteStatus
  region           Region           @relation(fields: [region_id] , references: [id])
  website          Website           @relation(fields: [website_id],references: [id]) 
  region_id         String      
  website_id        String
  createdAt       DateTime          @default(now())
}

enum WebsiteStatus {
  Up 
  Down 
  Unknown
}